generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum WasteCategory {
  ORGANIK
  ANORGANIK
  B3
}

model User {
  id            String   @id @default(uuid())
  nama_panggilan String
  username      String   @unique
  email         String   @unique
  password      String
  role          UserRole @default(USER)
  avatar_url    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  passwordResetTokens PasswordResetToken[]
  wasteLocations      WasteLocation[]

  @@map("users")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

model WasteLocation {
  id          String                    @id @default(uuid())
  name        String
  description String?
  latitude    Float
  longitude   Float
  address     String?
  image_url   String?
  createdBy   String                    @map("created_by")
  created_at  DateTime                  @default(now())
  updated_at  DateTime                  @updatedAt
  
  user        User                      @relation(fields: [createdBy], references: [id])
  categories  WasteLocationCategory[]

  @@map("waste_locations")
}

model WasteLocationCategory {
  id               String        @id @default(uuid())
  wasteLocationId  String        @map("waste_location_id")
  category         WasteCategory
  
  wasteLocation    WasteLocation @relation(fields: [wasteLocationId], references: [id], onDelete: Cascade)

  @@unique([wasteLocationId, category])
  @@map("waste_location_categories")
}
