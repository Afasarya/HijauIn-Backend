generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum WasteCategory {
  ORGANIK
  ANORGANIK
  B3
}

enum TransactionStatus {
  PENDING
  PAID
  CANCELLED
  FAILED
}

model User {
  id            String   @id @default(uuid())
  nama_panggilan String
  username      String   @unique
  email         String   @unique
  password      String
  role          UserRole @default(USER)
  avatar_url    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  passwordResetTokens PasswordResetToken[]
  wasteLocations      WasteLocation[]
  transactions        Transaction[]

  @@map("users")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

model WasteLocation {
  id          String                    @id @default(uuid())
  name        String
  description String?
  latitude    Float
  longitude   Float
  address     String?
  image_url   String?
  createdBy   String                    @map("created_by")
  created_at  DateTime                  @default(now())
  updated_at  DateTime                  @updatedAt
  
  user        User                      @relation(fields: [createdBy], references: [id])
  categories  WasteLocationCategory[]

  @@map("waste_locations")
}

model WasteLocationCategory {
  id               String        @id @default(uuid())
  wasteLocationId  String        @map("waste_location_id")
  category         WasteCategory
  
  wasteLocation    WasteLocation @relation(fields: [wasteLocationId], references: [id], onDelete: Cascade)

  @@unique([wasteLocationId, category])
  @@map("waste_location_categories")
}

model Product {
  id          String        @id @default(uuid())
  name        String
  description String?
  price       Float
  stock       Int
  image_url   String?       @map("image_url")
  category    String
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  
  transactions Transaction[]

  @@map("products")
}

model Transaction {
  id              String            @id @default(uuid())
  userId          String            @map("user_id")
  productId       String            @map("product_id")
  quantity        Int               @default(1)
  amount          Float
  status          TransactionStatus @default(PENDING)
  payment_url     String?           @map("payment_url")
  midtrans_order  String?           @unique @map("midtrans_order_id")
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("transactions")
}
